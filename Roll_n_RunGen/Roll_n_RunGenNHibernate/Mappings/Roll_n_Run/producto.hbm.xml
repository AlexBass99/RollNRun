<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="Roll_n_RunGenNHibernate"
		                   namespace="Roll_n_RunGenNHibernate.EN.Roll_n_Run">
		    
		    
			
				<class name="ProductoEN" table="Producto"> 
				  	
						<id name="Id" column="idProducto" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="Nombre" type="string"> 
						<column name="nombre"  not-null="true"/>
					</property>
					<property name="Marca" type="string"> 
						<column name="marca"  not-null="true"/>
					</property>
					<property name="Stock" type="integer"> 
						<column name="stock"  not-null="true"/>
					</property>
					<property name="Precio" type="double"> 
						<column name="precio"  not-null="true"/>
					</property>
					<property name="Imagen" type="string"> 
						<column name="imagen"  not-null="true"/>
					</property>
					<property name="Descripcion" type="string"> 
						<column name="descripcion"  not-null="true"/>
					</property>
					<property name="Val_media" type="double"> 
						<column name="val_media"  not-null="true"/>
					</property>
					<property name="Tipo" > 
						<column name="tipo"  not-null="true"/>
					</property>
			
			
			
			
			
			
			
			
			
		  			
					
							<many-to-one name="LineaPedido" class="Roll_n_RunGenNHibernate.EN.Roll_n_Run.LineaPedidoEN" >
								<column name="FK_idLineaPedido_idLineaPedido"/> 
        					</many-to-one>
					 
						
			
		  			
						<bag name="Valoracion" >
							<key>
							
								
								<column name="FK_idProducto_idProducto"/>
					      	</key>
							<one-to-many class="Roll_n_RunGenNHibernate.EN.Roll_n_Run.ValoracionEN"/>
					    </bag>
					
			
			
		  			
						<bag name="Usuario" table="[producto_usuario]"  >
							<key>
								
									<column name="FK_idProducto_idProducto"/> 
							</key>
      						<many-to-many class="Roll_n_RunGenNHibernate.EN.Roll_n_Run.UsuarioEN">
									<column name="FK_idUsuario_idUsuario"/> 
      						</many-to-many>
    					</bag>
			
			
		  			
					
							<many-to-one name="Comentario" class="Roll_n_RunGenNHibernate.EN.Roll_n_Run.ComentarioEN" >
								<column name="FK_idComentario_idComentario"/> 
        					</many-to-one>
					 
						
					
					
					
					
					
					
					
					
					
					
					
					
					
		
		 </class>	
		  
		  <query name="ProductoENReadAllHQL">from ProductoEN</query>
		  <query name="ProductoENbuscarPrecioHQL"><![CDATA[FROM ProductoEN]]></query>
		  <query name="ProductoENbuscarNombreHQL"><![CDATA[FROM ProductoEN]]></query>
		  <query name="ProductoENbuscarTipoHQL"><![CDATA[FROM ProductoEN]]></query>
		  <query name="ProductoENgetProductosDeseadosUsuarioHQL"><![CDATA[FROM ProductoEN]]></query>
		</hibernate-mapping>
	