<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="Roll_n_RunGenNHibernate"
		                   namespace="Roll_n_RunGenNHibernate.EN.Roll_n_Run">
		    
		    
			
				<class name="SubforoEN" table="Subforo"> 
				  	
						<id name="Id" column="idSubforo" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="Titulo" type="string"> 
						<column name="titulo"  not-null="true"/>
					</property>
					<property name="Fecha" type="date"> 
						<column name="fecha"  not-null="true"/>
					</property>
					<property name="Descripcion" type="string"> 
						<column name="descripcion"  not-null="true"/>
					</property>
					<property name="NumComentarios" type="integer"> 
						<column name="numComentarios"  not-null="true"/>
					</property>
			
			
			
		  			
						<many-to-one name="Autor" class="Roll_n_RunGenNHibernate.EN.Roll_n_Run.UsuarioEN" >	
								<column name="FK_idUsuario_idUsuario"/> 
						</many-to-one>
											 					
			
			
			
			
		  			
						<bag name="Comentario" >
							<key>
							
								
								<column name="FK_idSubforo_idSubforo"/>
					      	</key>
							<one-to-many class="Roll_n_RunGenNHibernate.EN.Roll_n_Run.ComentarioEN"/>
					    </bag>
					
			
			
		  			
						<bag name="Usuarios" table="[subforo_0_usuario]"  >
							<key>
								
									<column name="FK_idSubforo_idSubforo_0"/> 
							</key>
      						<many-to-many class="Roll_n_RunGenNHibernate.EN.Roll_n_Run.UsuarioEN">
									<column name="FK_idUsuario_idUsuario"/> 
      						</many-to-many>
    					</bag>
					
					
					
					
					
					
					
					
		
		 </class>	
		  
		  <query name="SubforoENReadAllHQL">from SubforoEN</query>
		  <query name="SubforoENgetSubforosUsuarioHQL"><![CDATA[select sfor FROMSubforoEN as sfor inner join Usuario as usu where usu.id = :p_autor]]></query>
		  <query name="SubforoENgetSeguidosUsuarioHQL"><![CDATA[select sfor FROMSubforoEN as sfor inner join Usuario as usu where usu.id = :p_usuarios]]></query>
		</hibernate-mapping>
	