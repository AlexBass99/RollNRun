@model IEnumerable<RollNRunWeb.Models.ProductoViewModel>
@{
    ViewBag.Title = "Bienvenido";
}

<section>
    <div>
        <h1>@ViewBag.Title</h1>
    </div>
</section>

<h2>Ofertas</h2>

<div id="my_carousel" class="carousel slide img-thumbnail push-down-1" data-ride="carousel" data-interval="3000">
    <div id="my_carousel" class="carousel slide img-thumbnail push-down-1" data-ride="carousel" data-interval="3000">
        <ol class="carousel-indicators">
            @{ int index = 0;}
            @foreach (var item in Model)
            {
                if (index == 0)
                {
                    <li data-target="my-carousel" data-slide-to=@index.ToString() class="active"></li>
                }
                else
                {
                    <li data-target="my-carousel" data-slide-to=@index.ToString()></li>
                }
                index++;
            }
        </ol>
        <div class="carousel-inner">
            @{index = 0;}
            @foreach (var item in Model)
            {
                if (index == 0)
                {
                    <div class="item active">
                        <h2>"AQUI VA LA IMAGEN"</h2>
                        <h3>@item.nombre</h3>
                        <p><del>@item.precio</del> €</p>

                        @Html.ActionLink("Ver producto", "Details", "Producto", routeValues: new { id = item.id }, htmlAttributes: null)
                    </div>
                }
                else
                {
                    <div class="item">
                        <h2>"AQUI VA LA IMAGEN"</h2>
                        <h3>@item.nombre</h3>
                        <p><del>@item.precio</del> €</p>
                        @Html.ActionLink("Ver producto", "Details", "Producto", routeValues: new { id = item.id }, htmlAttributes: null)

                    </div>

                }
                index++;
            }
        </div>

        <a class="left carousel-control" href="#my_carousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#my_carousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>