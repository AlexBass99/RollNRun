@model IEnumerable<RollNRunWeb.Models.LineaPedidoViewModel>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Producto.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.precio)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href ='@string.Format("https://localhost:44368/Producto/Details/{0}", item.Producto.Id)'>
                Detalles
            </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cantidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.precio)
        </td>
        <td>
            <a href='@string.Format("https://localhost:44368/LineaPedido/Delete/{0}", item.Producto.Id)'>
                Borrar
            </a>
        </td>
    </tr>
}

</table>
